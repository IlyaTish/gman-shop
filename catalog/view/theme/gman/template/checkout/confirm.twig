{% if not redirect %}
  <div class="cart cart-order">
    <div class="cart__products-container">
      {% for product in products %}
        <div class="cart__product">
          {% if product.thumb %}
            <div class="cart__thumb">
              <a href="{{ product.href }}" class="img-wrapper">
                <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}">
              </a>

              <div class="cart__options cart__options--mobile">
                {% if product.option %}
                  <div class="options">
                    {% for option in product.option %}
                      {% if option.name == 'Размер' %}
                        <span>{{ option.name }}:</span> 
                        <span class="option-value">{{ option.value }}</span>
                      {% endif %}
                    {% endfor %}
                  </div>
                {% endif %}

                <div class="amount">
                  <span>Количество:</span>
                  <span class="amout-value">{{ product.quantity }}</span>
                </div>

                <div class="price">
                  <span>Стоимость:</span>
                  <span class="accent">{{ product.total }}</span>
                </div>
              </div>
            </div>
          {% endif %}

          <div class="cart__content">
            <div class="cart__heading">
              <h4>{{ product.name }}</h4>
              <span class="cart__model">{{ product.model }}</span>

              {% if product.option %}
                {% for option in product.option %}
                  {% if option.name == 'Цвет' %}
                    <span class="option-value-color">{{ option.value }}</span>
                  {% endif %}
                {% endfor %}
              {% endif %}
            </div>

            <div class="cart__description">
              {% if product.description %}
                <div class="paragraph">
                  <div class="overlay"></div>
                  {{ product.description }}
                </div>
              {% endif %}
            </div>

            <div class="cart__options cart__options--desktop">
              {% if product.option %}
                <div class="options">
                  {% for option in product.option %}
                    {% if option.name == 'Размер' %}
                      <span>{{ option.name }}:</span> 
                      <span class="option-value">{{ option.value }}</span>
                    {% endif %}
                  {% endfor %}
                </div>
              {% endif %}

              <div class="amount">
                <span>Количество:</span>
                <span class="amount-value">{{ product.quantity }}</span>
              </div>

              <div class="price">
                <span>Стоимость:</span>
                <span class="accent">{{ product.price }}</span>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="cart__total cart__total-order">
    {% for total in totals %}
      <div class="cart__total__text--desktop">
        <span>{{ total.title }}:</span>
        <span class="accent"> {{ total.text }}</span>
      </div>
    {% endfor %}
  </div>

  {{ payment }}

{% else %} 
  <script>
  location = '{{ redirect }}';
  </script> 
{% endif %} 