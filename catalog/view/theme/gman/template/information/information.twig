{{ header }}
<div id="information-information" class="information">
  <div class="breadcrumb__nav">
    <ul class="breadcrumb">
      {% for breadcrumb in breadcrumbs %}
        <li>
          <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>

  <div class="information__content">
    <h1 class="information__heading">{{ heading_title }}</h1>
    {{ description }}
  </div>
</div>
{{ footer }}